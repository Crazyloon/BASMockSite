@model IEnumerable<BASMockSite.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(s => s.Name)
        </th>
        <th>
            @Html.DisplayNameFor(s => s.County)
        </th>
        <th>
            @Html.DisplayNameFor(s => s.EntryDate)
        </th>
        <th>
            @Html.DisplayNameFor(s => s.Tuition)
        </th>
        <th>Admin Controls</th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.Name)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.County)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tuition)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.SchoolID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.SchoolID">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.SchoolID">Delete</a>
        </td>
    </tr>
}
</table>
