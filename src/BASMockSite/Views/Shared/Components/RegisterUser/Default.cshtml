@using BASMockSite.ViewModels.Administration;
@model RegisterViewModel

<form asp-controller="Account" asp-action="Register" method="post" role="form">
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <p class="label label-default">Register New User</p>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 form-control-label"></label>
        <input asp-for="Email" class="form-control col-sm-10" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-md-2 control-label"></label>
        <input asp-for="Password" class="form-control col-sm-10" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control col-sm-10" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <small class="text-muted col-sm-offset-2 col-sm-10">Create a new account.</small>
    </div>
    <div class="form-group row col-sm-offset-2">
        <button type="submit" class="btn btn-primary">Create New User</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}