@using BASMockSite.ViewModels.Administration;
@model AddRemoveUserRoleViewModel

<form method="post" asp-action="AddRemoveUserRole" asp-controller="SiteAdmin">
    <p class="label label-default">Add/Remove User Role</p>
    <div class="form-group row">  
        <label for="UserName" class="col-sm-2 form-control-label">User Name:</label>
        <select id="UserName" class="col-sm-10" asp-for="UsersName" asp-items="Model.Users"></select>
    </div>
    <div class="form-group row">
        <label for="Role" class="col-sm-2 form-control-label">Role:</label>
        <select id="Role" class="col-sm-10" asp-for="UsersRoleID" asp-items="Model.Roles"></select>
        <small class="text-muted col-sm-offset-2 col-sm-10">Select a User and a Role, to add or remove from.</small>
    </div>
    <div class="form-group row col-sm-offset-2">
        <input type="submit" value="Add" name="btnAddOrRemove" class="btn btn-primary" />
        <input type="submit" value="Remove" name="btnAddOrRemove" class="btn btn-primary" />
    </div>
</form>