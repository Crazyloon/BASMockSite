@using BASMockSite.ViewModels.Administration;
@model RemoveUserViewModel

<form method="post" asp-action="RemoveUser" asp-controller="SiteAdmin">
    <p class="label label-default">Delete A User</p>
    <div class="form-group row">
        <label for="UserName" class="col-sm-2 form-control-label">User Name:</label>
        <select id="UserName" class="col-sm-10" asp-for="UserName" asp-items="Model.Users"></select>
        <small class="text-muted col-sm-offset-2 col-sm-10">Select a User then click remove to delete them.</small>
    </div>
    <div class="form-group row col-sm-offset-2">
        <input type="submit" value="Remove" class="btn btn-primary" />
    </div>
</form>